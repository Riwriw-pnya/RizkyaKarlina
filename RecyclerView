//RecyclerView

package com.example.ppt

//recyclerview
import android.os.Bundle
import androidx.appcompat.app.AppCompatActivity
import androidx.recyclerview.widget.LinearLayoutManager
import androidx.recyclerview.widget.RecyclerView

class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        // ðŸ”¹ Inisialisasi RecyclerView
        val recyclerView = findViewById<RecyclerView>(R.id.recyclerView)
        recyclerView.layoutManager = LinearLayoutManager(this)

        // ðŸ”¹ Data Cheesecuit
        val items = listOf(
            Cheesecuit("Cheesecuit Blackcrumble", "Perpaduan biskuit premium dan cream cheese" +
                    "yang melimpah ditambah dengan topping Black Crumble.", R.drawable.cheesecuit_crumb),
            Cheesecuit("Cheesecuit Blueberry", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan toppping selai dan buah blueberry.", R.drawable.cheesecuit_blue),
            Cheesecuit("Cheesecuit Chococrunchy", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan topping chococrunchy.", R.drawable.cheesecuit_cho),
            Cheesecuit("Cheesecuit Chocomalt", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan topping chocomalt.", R.drawable.cheesecuit_chom),
            Cheesecuit("Cheesecuit Double Cheese", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan topping parutan keju.", R.drawable.cheesecuit_dcheese),
            Cheesecuit("Cheesecuit Lotus", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan topping biskuit lotus.", R.drawable.cheesecuit_lotus),
            Cheesecuit("Cheesecuit Strawberry", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan topping strawberry.", R.drawable.cheesecuit_straw),
            Cheesecuit("Cheeesecuit Redvelvet", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan topping red velvet.", R.drawable.cheesecuit_red),
            Cheesecuit("Cheesecuit Tiramisu", "Perpaduan biskuit premium dan cream cheese yang" +
                    "melimpah ditambah dengan topping tiramisu.", R.drawable.cheesecuit_misu),
)


        // ðŸ”¹ Pasang adapter ke RecyclerView
        recyclerView.adapter = CheesecuitAdapter(items)
    }
}
